@model the_wall.Models.Register

<div class="container" style="margin-top: 75px">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <form asp-controller="Register" asp-action="Create" method="post">
            <div class="form-group">
              <label>First Name</label><br>
              <input class="form-control" asp-for="firstName"/>
              <span class="form-text text-muted" asp-validation-for="firstName"></span>
            </div>
            <div class="form-group">
              <label>Last Name</label><br>
              <input class="form-control" asp-for="lastName"/>
              <span class="form-text text-muted" asp-validation-for="lastName"></span>
            </div>
            <div class="form-group">
              <label>Email</label><br>
              <input class="form-control" asp-for="Email"/>
              <span class="form-text text-muted" asp-validation-for="Email"></span>
              @{
                if (ViewBag.emailExists != null) {
                  <span class="form-text text-muted">@ViewBag.emailExists</span>
                }
              }
            </div>
            <div class="form-group">
              <label>Password</label><br>
              <input class="form-control" asp-for="Password"/>
              <span class="form-text text-muted" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
              <label>Confirm Password</label><br>
              <input class="form-control" asp-for="confirmPassword"/>
              <span class="form-text text-muted" asp-validation-for="confirmPassword"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <a href="/login" class="nav-link float-right">Already signed up? Log in</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>