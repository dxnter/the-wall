@model the_wall.Models.Login

<div class="container" style="margin-top: 75px">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <form asp-controller="Login" asp-action="Login" method="post">
            <div class="form-group">
              <label>Email</label><br>
              <input class="form-control" asp-for="Email"/>
              @{
                if (TempData.ContainsKey("invalidEmail")) {
                  <span class="form-text text-muted">@TempData["invalidEmail"]</span>
                }
              }
            </div>
            <div class="form-group">
              <label>Password</label><br>
              <input class="form-control" asp-for="Password"/>
              @{
                if (TempData.ContainsKey("incorrectPassword")) {
                  <span class="form-text text-muted">@TempData["incorrectPassword"]</span>
                }
              }
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>